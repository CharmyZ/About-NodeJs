<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<div class="body">
    <div class="header">
        <div class="content">
            <div class="logo">
                NodeJS
            </div>
        </div>
    </div>
    <div class="main">
        <div class="content">
            <h1>
                NodeJS网站内容列表(通过爬虫抓取)
            </h1>
            <ul>
                <% for(var i = 0;i < html.length;i++){ %>
                <li>
                    <div class="animate" style="display:none;">
                        <a href="<%= html[i].href %>" title="<%= html[i].title %>"><%= html[i].title %></a>
                    </div>
                </li>
                <% } %>
            </ul>
            <div class="page-nav">
                <% for(var i = 1;i <= totalPage ;i++){ %>
                <span class="<%= currentPage == i ? 'active' : '' %>">
						<a href="?page=<%= i %>"><%= i %></a>
					</span>
                <% } %>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="content">
            <span class="visitNum"> 访问人数:<%= visitNum %></span>
        </div>
    </div>
</div>
</body>
<script src="http://cdn.bootcss.com/jquery/3.0.0-alpha1/jquery.js"></script>
<script>
    $(function () {
        var time = 0;
        $(".animate").each(function () {
            var _this = $(this);
            setTimeout(function () {
                showIn(_this);
            }, time);
            time += 50;
            var showIn = function ($this) {
                $this.show(0, function () {
                    $(this).addClass('animation-slideRightIn');
                });
            }
        });
    });
</script>
<script>

</script>
</html>

